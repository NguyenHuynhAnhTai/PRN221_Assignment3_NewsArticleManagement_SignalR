@page
@model NguyenHuynhAnhTaiSignalR.Pages.NewsArticleManagement.DeleteModel

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Delete";
}

<style>
    .tag-name {
        color: white;
        background-color: #17a2b8;
        padding: 0.5em 1em;
        border-radius: 0.25rem;
        display: inline-block;
    }
</style>

<div>
    <h1>Do you want to delete this?</h1>
    <dl class="row">
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsTitle)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.NewsTitle)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.CreatedDate)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.CreatedDate)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsContent)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.NewsContent)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.NewsStatus)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.NewsStatusDisplay)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.ModifiedDate)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.ModifiedDate)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.Category)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.Category.CategoryDesciption)
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.Tags)
        </dt>
        <dd class="col-8">
            @foreach (var tag in Model.NewsArticle.Tags)
            {
                <span class="badge badge-info tag-name">@tag.TagName</span>
            }
        </dd>
        <dt class="col-4">
            @Html.DisplayNameFor(model => model.NewsArticle.CreatedBy)
        </dt>
        <dd class="col-8">
            @Html.DisplayFor(model => model.NewsArticle.CreatedBy.AccountName)
        </dd>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div style="color: red" id="error-message">@Model.Message</div>
        }

        <form method="post">
            <input type="hidden" name="id" asp-for="NewsArticle.NewsArticleId" />
            <input type="submit" asp-page-handler="Delete" value="Delete" class="btn btn-danger" />
            <a asp-page="/NewsArticleManagement/Index" class="btn btn-secondary">Close</a>
        </form>
    </dl>

</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const errorMessage = document.getElementById("error-message");
        if (errorMessage) {
            const message = errorMessage.textContent.trim();
            if (message !== "") {
                setTimeout(function () {
                    errorMessage.style.display = "none";
                    window.location.href = '/NewsArticleManagement/Index';
                }, 1000);
            } else {
                setTimeout(function () {
                    errorMessage.style.display = "none";
                }, 1000);
            }
        }
    });
</script>
