@page
@model NguyenHuynhAnhTaiSignalR.Pages.ProfileManagement.EditModel

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="SystemAccount.AccountId" class="control-label"></label>
                <input asp-for="SystemAccount.AccountId" class="form-control" readonly />
                <span asp-validation-for="SystemAccount.AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemAccount.AccountName" class="control-label"></label>
                <input asp-for="SystemAccount.AccountName" class="form-control" />
                <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemAccount.AccountEmail" class="control-label"></label>
                <input asp-for="SystemAccount.AccountEmail" class="form-control" />
                <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Role" class="control-label"></label>
                <input asp-for="@Model.Role" class="form-control" />
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemAccount.AccountPassword" class="control-label"></label>
                <input asp-for="SystemAccount.AccountPassword" class="form-control" />
                <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div style="color: red" id="error-message">@Model.Message</div>
            }
            <div class="form-group" style="margin-top: 2%">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="/ProfileManagement/AccountDetail" class="btn btn-secondary">Close</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = document.getElementById("error-message");
            if (errorMessage) {
                const message = errorMessage.textContent.trim();
                if (message !== "") {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                        window.location.href = '/ProfileManagement/AccountDetail';
                    }, 1000);
                } else {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                    }, 1000);
                }
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
