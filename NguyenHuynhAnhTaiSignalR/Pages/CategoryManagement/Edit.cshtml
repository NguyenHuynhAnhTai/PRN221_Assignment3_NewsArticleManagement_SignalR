@page
@model NguyenHuynhAnhTaiSignalR.Pages.CategoryManagement.EditModel

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Edit";
}

<h1>Category</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.CategoryDesciption" class="control-label"></label>
                <input asp-for="Category.CategoryDesciption" class="form-control" />
                <span asp-validation-for="Category.CategoryDesciption" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div style="color: red" id="error-message">@Model.Message</div>
            }
            <div class="form-group" style="margin-top: 2%">
                <input type="hidden" name="id" asp-for="Category.CategoryId" />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="/CategoryManagement/Index" class="btn btn-secondary">Close</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const errorMessage = document.getElementById("error-message");
            if (errorMessage) {
                const message = errorMessage.textContent.trim();
                if (message !== "") {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                        window.location.href = '/CategoryManagement/Index';
                    }, 1000);
                } else {
                    setTimeout(function () {
                        errorMessage.style.display = "none";
                    }, 1000);
                }
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
